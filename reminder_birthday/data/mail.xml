<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="employee_reminder_birthday_template" model="mail.template">
            <field name="name">Employee: Reminder Birthday </field>
            <field name="email_from">{{ object.company_id.name }} &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="subject">Birthday Wishes from {{ object.company_id.name }}</field>
            <field name="email_to">{{ object.work_email }}</field>
            <field name="lang">{{ object.company_id.partner_id.lang }}</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; padding-bottom: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- HEADER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td t-if="object.company_id.logo" valign="middle" align="right">
                                                       <img t-attf-src="/logo.png?company={{ object.company_id.id }}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2" style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="top" style="font-size: 13px;">
                                                        <div>
                                                            <p>Dear <t t-out="object.name or ''" contenteditable="false" data-oe-t-inline="true"/>,</p>
                                                            <p>Happy Birthday!!!!</p>
                                                            <p>Hope you have a great year ahead. Stay Healthy, Stay Happy &amp; Stay Safe.</p>
                                                            <br />
                                                            <p>Thanks,</p>
                                                            <p><t t-out="object.company_id.name or ''" contenteditable="false" data-oe-t-inline="true"/></p>
                                                            <br /><br />
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- FOOTER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" align="left">
                                                        <t t-out="object.company_id.name or ''" contenteditable="false" data-oe-t-inline="true"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td valign="middle" align="left" style="opacity: 0.7;">
                                                        <t t-out="object.company_id.phone or ''" contenteditable="false" data-oe-t-inline="true"/>
                                                       
                                                       <t t-if="object.company_id.email">
                                                            <a href="'mailto:%s' % object.company_id.email" style="text-decoration:none; color: #454748;"><t t-out="object.company_id.email or ''" contenteditable="false" data-oe-t-inline="true"/></a>
                                                       </t>
                                                       
                                                       <t t-if="object.company_id.website">
                                                            <a href="'%s' % object.company_id.website " style="text-decoration:none; color: #454748;">
                                                                <t t-out="object.company_id.website or ''" contenteditable="false" data-oe-t-inline="true"/>
                                                            </a>
                                                       </t>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
       
    </data>
</odoo>
